<resources>
    <!-- Base application theme. -->
    <style name="AppColorSchemeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme" parent="AppColorSchemeTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
    
    <style name="ImageButton" parent="android:Widget.ImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/imagebutton</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="FavoritesImageButton" parent="@style/ImageButton">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="srcCompat">@drawable/greyheart</item>
    </style>

    <style name="HomeImageButton" parent="@style/ImageButton">
        <item name="srcCompat">@drawable/greyhouse</item>
    </style>

    <style name="SettingsImageButton" parent="@style/ImageButton">
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="srcCompat">@drawable/greyman</item>
    </style>

    <style name="BottomText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DetailText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

</resources>